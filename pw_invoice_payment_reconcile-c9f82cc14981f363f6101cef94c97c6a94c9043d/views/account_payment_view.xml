<?xml version="1.0"?>
<odoo>
    <record id="view_account_payment_form_inherit_dxl" model="ir.ui.view">
        <field name="name">account.payment.inherit.dxl</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Invoice/Bills">
                        <button name="open_invoice_selection_wizard" type="object" string="Select Invoices" class="oe_highlight"/>
                        <field name="reconcile_invoice_ids">
                            <tree editable="bottom" create="false">
                                <field name="currency_id" invisible="1"/>
                                <field name="invoice_id" string="Number" readonly="1" force_save="1"/>
                                <field name="amount_untaxed" readonly="1" force_save="1"/>
                                <field name="amount_tax" readonly="1" force_save="1"/>
                                <field name="amount_total" readonly="1" force_save="1"/>
                                <field name="already_paid" readonly="1" force_save="1"/>
                                <field name="amount_residual" readonly="1" force_save="1"/>
                                <field name="amount_paid"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

<record id="view_account_payment_invoice_wizard_form" model="ir.ui.view">
    <field name="name">account.payment.invoice.wizard.form</field>
    <field name="model">account.payment.invoice.wizard</field>
    <field name="arch" type="xml">
        <form string="Select Invoices for Payment Reconciliation">
            <group>
                <field name="payment_id" invisible="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="payment_type" readonly="1"/>
                <!-- AquÃ­ mostramos la vista tree con un checkbox para seleccionar las facturas -->
                <field name="invoice_ids" mode="tree">
                    <tree string="Select Invoices">
                        <field name="name"/>
                        <field name="invoice_date" string="Invoice Date"/>
                        <field name="amount_total" string="Total Amount"/>
                        <field name="amount_residual" string="Amount Due"/>
                        <field name="is_selected" string="Select" widget="boolean"/>
                    </tree>
                </field>
            </group>
            <footer>
                <button name="action_add_invoices" string="Guardar facturas seleccionadas" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>


<record id="action_account_payment_invoice_wizard" model="ir.actions.act_window">
    <field name="name">Select Invoices</field>
    <field name="res_model">account.payment.invoice.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_account_payment_invoice_wizard_form"/>
    <field name="target">new</field>
</record>
</odoo>
