<odoo>
    <record id="view_account_payment_form_inherit_dxl" model="ir.ui.view">
        <field name="name">account.payment.inherit.dxl</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <!-- Campo de búsqueda -->
                <group>
                    <field name="search_text" placeholder="Ingrese número de factura para buscar..." 
                           context="{'search_text': search_text}"/>
                </group>

                <!-- Línea de reconciliación de facturas -->
                <field name="reconcile_invoice_ids">
                    <tree editable="bottom" create="false">
                        <field name="currency_id" invisible="1"/>
                        <field name="invoice_id" string="Número" readonly="1"/>
                        <field name="amount_untaxed" readonly="1"/>
                        <field name="amount_tax" readonly="1"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="already_paid" readonly="1"/>
                        <field name="amount_residual" readonly="1"/>
                        <field name="amount_paid"/>
                    </tree>
                </field>
            </xpath>

            <!-- Aplicar el dominio con el valor del campo search_text -->
            <xpath expr="//field[@name='reconcile_invoice_ids']" position="attributes">
                <attribute name="domain">[('invoice_id.name', 'ilike', context.get('search_text', ''))]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
