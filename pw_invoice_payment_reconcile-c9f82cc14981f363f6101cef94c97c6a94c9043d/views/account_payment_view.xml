<?xml version="1.0"?>
<odoo>
    <record id="view_account_payment_form_inherit_dxl" model="ir.ui.view">
        <field name="name">account.payment.inherit.dxl</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Invoice/Bills">
                        <group>
                            <field name="search_text" placeholder="Ingrese nÃºmero de factura para buscar..."/>
                        </group>
                        <field name="reconcile_invoice_ids">
                            <tree editable="bottom" create="false">
                                <field name="currency_id" invisible="1"/>
                                <field name="invoice_id" string="Number" readonly="1" force_save="1"/>
                                <field name="amount_untaxed" readonly="1" force_save="1"/>
                                <field name="amount_tax" readonly="1" force_save="1"/>
                                <field name="amount_total" readonly="1" force_save="1"/>
                                <field name="already_paid" readonly="1" force_save="1"/>
                                <field name="amount_residual" readonly="1" force_save="1"/>
                                <field name="amount_paid"/>
                                
                                <!-- Campo Computado para Controlar Visibilidad -->
                                <field name="is_visible" invisible="1"/>
                                
                                <!-- Filtro de visibilidad en base a is_visible -->
                                <xpath expr="//tree" position="attributes">
                                    <attribute name="attrs">{'invisible': [('is_visible', '=', False)]}</attribute>
                                </xpath>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>

            <!-- Colocar estos campos dentro de un <group> adecuado -->
            <xpath expr="//form" position="inside">
                <group>
                    <field name="need_cancel_request" invisible="1"/>
                    <field name="show_reset_to_draft_button" invisible="1"/>
                    <field name="is_reconciled" invisible="1"/>
                    <field name="is_matched" invisible="1"/>
                    <field name="payment_method_code" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
