<odoo>
  <record id="view_picking_form_inherit_product_button" model="ir.ui.view">
    <field name="name">stock.picking.form.inherit.product.button</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='button_validate']" position="after">
        <button name="action_open_product_select_wizard"
                type="object"
                string="Seleccionar Productos"
                class="btn-secondary"/>
       <button name="button_actualizar"
                    type="object"
                    string=""
                    class="btn-secondary"
                    icon="fa-refresh"/>
      </xpath>
    </field>
  </record>

<record id="view_move_form" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="camas_x_pallet" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                <field name="cajas_x_pallet" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                <field name="unidades_sku_x_pallet" attrs="{'invisible': [('state', '!=', 'draft')]}" />
            </xpath>
        </field>
  
</odoo>
